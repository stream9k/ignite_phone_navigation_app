<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:text="@string/status_loading"
            android:textSize="14sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchMasterToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_master"
            android:textSize="16sp"
            android:checked="true"
            android:layout_marginBottom="16dp" />

        <!-- 필수 권한 설정 블럭 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필수 권한 설정 (순서대로 진행)"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnRequestNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 알림 권한 요청"
                android:backgroundTint="#673AB7"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnFullScreenIntent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 전체 화면 알림 설정"
                android:backgroundTint="#673AB7"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnDrawOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 다른 앱 위에 표시 허용"
                android:backgroundTint="#673AB7"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAccessibility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4. 접근성 설정"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#673AB7"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btnRestrictedSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4-1. 제한된 설정 허용"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#673AB7"
                    android:gravity="center"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. 배터리 최적화 해제"
                android:backgroundTint="#673AB7"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 블럭 1: 앱 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <!-- 내비게이션 앱 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동 시작할 앱 선택"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- 앱 목록 컨테이너 -->
            <LinearLayout
                android:id="@+id/llAppListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"/>

            <!-- 지연 시간 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱 종료 지연 시간 설정"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 종료 대기:"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/editDelaySeconds"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="60"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btnSaveAppDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="저장"
                    android:textColor="#673AB7"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 블럭 2: 비행기 모드 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAirplaneMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비행기 모드 자동 실행"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동작 대기:"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/editAirplaneDelayMinutes"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="5"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분 후"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btnSaveAirplaneDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="저장"
                    android:textColor="#673AB7"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnLockScreenSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="네트워크 보안잠금 해제 설정하기"
                android:backgroundTint="#673AB7"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 블럭 3: 시스템 종료 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSystemShutdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시스템 전원 자동 종료"
                android:textStyle="bold"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동작 대기:"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/editSystemShutdownDelayMinutes"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="30"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분 후"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btnSaveSystemShutdownDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="저장"
                    android:textColor="#673AB7"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_manual_test"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTestNavi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="내비 실행"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#673AB7"/>

            <Button
                android:id="@+id/btnTestShutdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="앱 종료"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#673AB7"/>

            <Button
                android:id="@+id/btnTestSystemShutdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시스템 종료"
                android:textSize="12sp"
                android:backgroundTint="#C62828"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnTestAirplane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비행기 모드 토글 테스트"
            android:backgroundTint="#1976D2"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</ScrollView>